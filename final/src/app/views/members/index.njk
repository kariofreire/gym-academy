{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <a href="/members/create">Novo</a>
    <table>
      <thead>
        <tr>
          <th>Membro</th>
          <th>E-mail</th>
          <th>Peso</th>
          <th>Altura</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for member in members %}
        <tr>
          <td>
            <img src="{{ member.avatar_url }}" alt="{{ member.name }}">
            {{ member.name }}
          </td>
          <td>{{ member.email }}</td>
          <td>{{ member.weight }}kg</td>
          <td>{{ member.height }}cm</td>
          <td><a href="/members/{{ member.id }}">ver</a></td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}