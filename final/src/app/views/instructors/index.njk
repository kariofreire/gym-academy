{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <div class="table-container__header">
      <a class="button" href="/instructors/create">Novo</a>

      <form action="/instructors" method="GET">
        <input 
          type="text"
          name="filter"
          placeholder="Nome ou atendimento"
          value="{{ filter }}"
        >
        <button type="submit">Filtrar</button>
      </form>
    </div>
    <table>
      <thead>
        <tr>
          <th>Instrutor</th>
          <th>Atendimento</th>
          <th>Alunos</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for instructor in instructors %}
        <tr>
          <td>
            <img src="{{ instructor.avatar_url }}" alt="{{ instructor.name }}">
            {{ instructor.name }}
          </td>
          <td>{{ instructor.services }}</td>
          <td>{{ instructor.total_students }}</td>
          <td><a href="/instructors/{{ instructor.id }}">ver</a></td>
        </tr>
        {% endfor %}
      </tbody>
    </table>

    <div 
      id="pagination"
      data-total="{{ total }}" 
      data-filter="{{ filter }}"
    >
    </div>
  </div>

  <script src="/paginate.js"></script>
{% endblock %}